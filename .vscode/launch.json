{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Edge でAngular アプリをデバッグ",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:4200/eim/client",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "pauseForSourceMap": false,
            "smartStep": true,
            "pathMapping": {
                "/eim/client": "${workspaceFolder}",
                "/": "${workspaceFolder}"
            },
            "skipFiles": [
                "${workspaceFolder}/node_modules/**",
                "<node_internals>/**"
            ]
        },
        {
            "name": "Chrome でAngular アプリをデバッグ",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/eim/client/",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "pauseForSourceMap": false,
            "smartStep": true,
            "pathMapping": {
                "/eim/client": "${workspaceFolder}",
                "/": "${workspaceFolder}"
            },
            "skipFiles": [
                "${workspaceFolder}/node_modules/**",
                "<node_internals>/**"
            ]
        }
    ]
}