<div *ngFor="let attribute of attributes; let i = index">

	<eim-text-input-form-item *ngIf="attribute.attributeType.valueType === Const.VALUE_TYPE_NAME_INTEGER"
			[form]="form" [name]="'attr_' + attribute.attributeType.id"
			[label]="attribute.attributeType.name"
			[maxlength]="Const.NUMBER_MAX_LENGTH" [pattern]="Const.NUMBER_PATTERN"
			[multiple]="attribute.attributeType.multiple"
			[(ngModel)]="attribute.longList">
	</eim-text-input-form-item>

	<eim-text-input-form-item *ngIf="attribute.attributeType.valueType === Const.VALUE_TYPE_NAME_STRING"
			[form]="form" [name]="'attr_' + attribute.attributeType.id"
			[label]="attribute.attributeType.name"
			[maxlength]="Const.STRING_MAX_LENGTH"
			[multiple]="attribute.attributeType.multiple"
			[(ngModel)]="attribute.stringList">
	</eim-text-input-form-item>

	<eim-calendar-input-form-item *ngIf="attribute.attributeType.valueType === Const.VALUE_TYPE_NAME_DATE"
			[form]="form" [name]="'attr_' + attribute.attributeType.id"
			[label]="attribute.attributeType.name"
			[multiple]="attribute.attributeType.multiple"
			[showTime]="true"
			[(ngModel)]="attribute.dateList">
	</eim-calendar-input-form-item>

	<eim-text-area-input-form-item *ngIf="attribute.attributeType.valueType === Const.VALUE_TYPE_NAME_TEXT"
			[form]="form" [name]="'attr_' + attribute.attributeType.id"
			[label]="attribute.attributeType.name"
			[multiple]="attribute.attributeType.multiple"
			[(ngModel)]="attribute.textList">
	</eim-text-area-input-form-item>

	<eim-text-input-form-item *ngIf="attribute.attributeType.valueType === Const.VALUE_TYPE_NAME_DOUBLE"
			[form]="form" [name]="'attr_' + attribute.attributeType.id"
			[label]="attribute.attributeType.name"
			[maxlength]="Const.REAL_NUMBER_MAX_LENGTH" [pattern]="Const.REAL_PATTERN"
			[multiple]="attribute.attributeType.multiple"
			[(ngModel)]="attribute.doubleList">
	</eim-text-input-form-item>

	<eim-combo-box-input-form-item *ngIf="attribute.attributeType.valueType === Const.VALUE_TYPE_NAME_CODE"
			[form]="form" [name]="'attr_' + attribute.attributeType.id"
			[label]="attribute.attributeType.name"
			[multiple]="attribute.attributeType.multiple"
			[(ngModel)]="attribute.codeList" [options]="optionsList[i]">
	</eim-combo-box-input-form-item>

	<eim-object-input-form-item *ngIf="attribute.attributeType.valueType === Const.VALUE_TYPE_NAME_OBJECT"
			[form]="form" [name]="'attr_' + attribute.attributeType.id"
			[label]="attribute.attributeType.name"
			[multiple]="attribute.attributeType.multiple"
			[(ngModel)]="attribute.objectList">
	</eim-object-input-form-item>

	<eim-user-input-form-item *ngIf="attribute.attributeType.valueType === Const.VALUE_TYPE_NAME_USER"
			[form]="form" [name]="'attr_' + attribute.attributeType.id"
			[label]="attribute.attributeType.name"
			[multiple]="attribute.attributeType.multiple"
			[(ngModel)]="attribute.userList">
	</eim-user-input-form-item>

</div>
