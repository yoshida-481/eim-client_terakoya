<form eim-vertical-container style="width: 100%; height: 100%;" autocomplete="off" adjustedValue="-17">
	<eim-text-input-form-item
		name="objId"
		label="{{ 'EIM.LABEL_02027' | translate }}"
		[pattern]="number_pattern"
		[form]="validForm.form"
		[(ngModel)]="objId">
	</eim-text-input-form-item>
	<div class="eim-form-item">
		<label class="eim-form-label">{{ 'EIM.LABEL_02002' | translate }} </label>
		<div class="eim-form-input" style="display: flex;" >
			<input type="text" name="secLabel" pInputText [(ngModel)]="objName" style="width: 100%;"/>
		</div>
	</div>
	<div class="eim-form-item">
		<label class="eim-form-label">{{ 'EIM.LABEL_02060' | translate }} </label>
		<div class="eim-form-input" style="display: flex;" >
			<div class="eim-form-input-default eim-form-input-for-search-and-clear" style="width: 95%;">
				<div class="eim-form-input-text-for-search-and-clear">
					{{objType.name}}　<!-- 空白を入れないと削除時に1pxずれる -->
				</div>
				<div *ngIf="objType.name" align="right">
					<i class="fa fa-times" style="padding-right:5px;"  (click)="onClickDeleteObjectType()"></i>
				</div>
			</div>
			<button pButton type="button" severity="info" class="icon-only-button" icon="fa fa-external-link" style="margin-left: 5px;"
				pTooltip="{{ 'EIM_OBJECT_EDITORS.LABEL_02075' | translate }}"
				(click)="onClickSelectObjectType()">
			</button>
		</div>
	</div>

	<div style="text-align: right; padding-bottom: 5px;">
		<button pButton type="submit" label="{{ 'EIM.LABEL_03007' | translate }}" icon="eim-icon-search" class="eim-contents-search-btn p-button-primary" style="width: 120px; letter-spacing: 5px;margin-right:.4em"
			(click)="onClickSearch()" [disabled]="!searchable()"></button>
		<button pButton type="button" class="p-button-secondary" label="{{ 'EIM.LABEL_03009' | translate }}" (click)="onClickClear();"></button>
	</div>
	<div class="eim-flexible-height">
		<eim-data-grid #objectDataGrid [multiple]="false">
		</eim-data-grid>
	</div>
</form>
<form #validForm="ngForm" ></form>