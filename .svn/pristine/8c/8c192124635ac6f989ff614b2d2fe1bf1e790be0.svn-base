<div style="height: 100%;">
	<as-split direction="horizontal">
		<as-split-area [size]="splitAreaLeftSize">
			<div class="eim-admin-left-panel">
				<p-panel class="eim-panel-containing-grid" header="{{ 'EIM_ADMINS.LABEL_02067' | translate }}">
					<div style="height: 100%;" eim-vertical-container>
						<div class="eim-data-grid-menu" >
							<eim-menubar [model]="attrTreeMenu"></eim-menubar>
						</div>
						<div class="eim-flexible-height">
							<eim-data-grid #attributeTreeDataGrid [multiple]="false" (selected)="onSelectedAttributeTree()" [equals]="attrTreeEquals"
							[contextMenuItems]="attrTreeContextMenu"></eim-data-grid>
						</div>
					</div>
				</p-panel>
			</div>
		</as-split-area>
		<as-split-area [size]="100 - splitAreaLeftSize">
			<div class="eim-admin-right-panel" style="width: 100%">
				<p-panel class="eim-panel-containing-grid" header="{{ 'EIM_ADMINS.LABEL_02069' | translate }}">
					<div style="height: 100%;" eim-vertical-container>
						<div class="eim-data-grid-menu" >
							<eim-menubar [model]="attrMenu"></eim-menubar>
						</div>
						<div class="eim-flexible-height" style="width: 100%; height: 100%; display: flex;">
							<div style="height: 100%; width: calc(100% - 5px);">
								<eim-data-grid #attributeDataGrid [multiple]="false" (selected)="onSelectedAttribute()" [equals]="attrEquals"
								[contextMenuItems]="attrContextMenu"></eim-data-grid>
							</div>
						</div>
					</div>
				</p-panel>
			</div>
		</as-split-area>
	</as-split>
</div>

