.eim-form-deital-left-panel {
	height: 100%;
	padding-left: 0px;
	overflow: auto;
	position: relative;
}

.eim-form-deital-left-panel.eim-form-no-wf {
	padding-top: 0px;
	padding-right: 0px;
}

/* 2022.05 新規 処理履歴表示ボタン用 */
::ng-deep eim-form-updator eim-workflow-diagram .eim-diagram-action-show-history button.p-button.p-button-success {
	padding: 0px;
}
/* 2022.05 新規 処理履歴表示ボタン用 */
::ng-deep eim-form-updator eim-workflow-diagram .eim-diagram-action-show-history button.p-button.p-button-success span.p-button-icon {
	padding-left: 6px;
	margin: 0px;
}
/* 2022.05 新規 処理履歴表示ボタン用 */
::ng-deep eim-form-updator eim-workflow-diagram .eim-diagram-action-show-history button.p-button.p-button-success span.p-button-label {
	padding: 3px 12px 3px 6px;
}
/* 2022.05 新規 アコーディオン用 */
::ng-deep eim-form-updator .eim-form-detail p-accordion.p-accordion.p-component {
	padding: 3px;
}
/* 2022.05 新規 アコーディオン用 */
::ng-deep eim-form-updator .eim-form-detail p-accordion.p-accordion.p-component .p-accordionheader {
	padding: 8px 6px;
	font-weight: 400;
	border: 1px solid #d9d9d9;
	color: #1b1d1f;
	text-decoration: none;
}
/* 2022.05 新規 アコーディオン用 */
::ng-deep eim-form-updator .eim-form-detail p-accordion.p-accordion.p-component .p-accordionheader:hover {
	border: 1px solid silver!important;
	background: linear-gradient(to bottom, #f2f2f2, #d7d7d7);
}
/* 2022.05 新規 アコーディオン用 */
::ng-deep eim-form-updator .eim-form-detail p-accordion.p-accordion.p-component .p-accordionheader {
	text-decoration: underline;
}
/* 2022.05 新規 アコーディオン用 */
::ng-deep eim-form-updator .eim-form-detail p-accordion.p-accordion.p-component .p-accordionheader .p-accordionheader-toggle-icon {
	width: 7px !important;
	height: 7px !important;
	font-size: 8px;
	margin-right: 0.5rem;
}
/* 2022.05 新規 アコーディオン用 */
::ng-deep eim-form-updator .eim-form-detail p-accordion.p-accordion.p-component .p-accordioncontent .p-accordioncontent-content {
	padding-top: 3px;
	border-bottom-left-radius: 0;
	border-bottom-right-radius: 0;
}

::ng-deep eim-form-updator .eim-form-detail.use-flat-type p-accordion.p-accordion.p-component .p-accordioncontent .p-accordioncontent-content {
	padding-top: 6px;
	border-bottom-left-radius: 0;
	border-bottom-right-radius: 0;
}

::ng-deep eim-form-updator .eim-form-detail .p-fieldset.p-fieldset-toggleable .p-fieldset-legend .p-fieldset-toggle-button {
	font: inherit;
	line-height: 1;
}

::ng-deep eim-form-updator .eim-form-detail .p-fieldset.p-fieldset-toggleable .p-fieldset-legend button .p-fieldset-toggler .eim-filedset-icon{
	margin-right: 0.5rem;
	font-size: 8px;
}

