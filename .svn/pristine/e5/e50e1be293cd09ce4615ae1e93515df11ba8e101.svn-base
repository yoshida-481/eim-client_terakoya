<div (contextmenu)="onContextMenu($event)" style="width: 100%; height: 100%;">
	<p-tree id="eim-tree-body" class="eim-font" [value]="info.data" [(selection)]="info.selectedData[0]" [contextMenu]="contextMenu" [filter]="filter"
				(onNodeSelect)="onSelect($event.node, $event.originalEvent)"
				(onNodeUnselect)="onUnselect($event.node, $event.originalEvent)"
				(onNodeExpand)="onExpand($event.node)"
				(onNodeContextMenuSelect)="onNodeContextMenuSelect($event)" [selectionMode]="multiple ? 'multiple' : 'single'"
				[style.height]="filter ? 'calc(100% - 40px)' : 'auto'">

		<ng-template let-node pTemplate="title">
			<span style="font-weight:bold;">{{node.label}}</span>
		</ng-template>

		<ng-container *ngIf="isDispMouseOverMenu">
			<ng-template let-node pTemplate="default">
				<span style="margin-right: 10px; display: flex;justify-content: space-between;align-items: center;cursor: pointer;" (mouseenter)="onMouseEnter(node)" (mouseleave)="onMouseLeave()" >
					<span>{{ node.label }}</span>
					<span style="display: flex; justify-content: center;" [ngClass]="{'hover-background': mouseEnterNodeIcon}" (mouseenter)="onMouseEnterIcon(node)" (mouseleave)="onMouseLeaveIcon()">
						<button pButton type="button" *ngIf="mouseEnterNode === node" style="width:100%; background:none; background-color:transparent;border: none;"
							class="icon-only-button" icon="fa fa-solid fa-bars"
							(click)="onClickShowMenu($event, contextMenu)"></button>
					</span>
				  </span>
			</ng-template>
		</ng-container>

	</p-tree>
	<p-contextMenu #contextMenu [model]="contextMenuItems" appendTo="body"></p-contextMenu>
</div>