<div style="height: 100%; width: 100%; display: flex;">
	<div eim-vertical-container style="width: calc(100% - 30px); height: 100%; ">
		<div class="eim-flexible-height">
			<eim-tree-data-grid #eventDataGrid [equals]="dataGridEquals"
				(selected)="onSelectTreeNode($event)" style="height: 100%;" [multiple]="false">
			</eim-tree-data-grid>
		</div>
	</div>

	<div style="height: 100%; width: 30px; display: table;">
		<div style="vertical-align: middle; float: none; display: table-cell;">
			<button pButton class="p-button-success" type="button" pTooltip="{{ 'EIM.LABEL_03029' | translate }}" icon="fa fa-arrow-up"
				(click)="onClickUp($event)" style="margin-bottom: 10px;" [disabled]="!moveable" ></button>
			<button pButton class="p-button-success" type="button" pTooltip="{{ 'EIM.LABEL_03030' | translate }}" icon="fa fa-arrow-down"
				(click)="onClickDown($event)" [disabled]="!moveable" ></button>
		</div>
	</div>
</div>