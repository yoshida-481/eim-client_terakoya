<div class="p-grid" style="width: 100%; height: 100%; margin-bottom: 5px;">
	<form *ngIf="displaySearch" class="eim-security" (ngSubmit)="onSearchSecurity($event)" autocomplete="off">
		<!-- セキュリティ -->
		<p-panel class="eim-panel-containing-grid" header="{{ 'EIM_ADMINS.LABEL_02015' | translate }}">
			<div eim-vertical-container style="height: 100%;">

				<div class="eim-form-item" style="width: 100%;">
					<label class="eim-form-label">{{ 'EIM_ADMINS.LABEL_02016' | translate }}</label>
					<div class="eim-form-input" style="display: flex;">
						<!-- 名前 -->
						<input pInputText style="width: 87%;" id="securityName" name="securityName" required="false"
							[(ngModel)]="securityName" maxlength="{{inputMaxLength}}"/>
						<button pButton type="button" class="p-button-info icon-only-button" pTooltip="{{ 'EIM.LABEL_03007' | translate }}"
							style="float: right; margin-left: 5px;" icon="eim-icon-search" (click)="onSearchSecurity($event)"></button>
					</div>
				</div>

				<div style="width: 100%;" class="eim-flexible-height">
					<eim-data-grid #securityGrid (selected)="onSelectSecurity($event)" [componentService]="" [multiple]="false"></eim-data-grid>
				</div>
			</div>
		</p-panel>
	</form>
	<div [ngClass]="accessEntryClass">
		<!-- アクセスエントリー -->
		<p-blockUI [target]="entryPnl" [blocked]="blockFlag">
		</p-blockUI>
		<p-panel #entryPnl class="eim-panel-containing-grid" header="{{ 'EIM_ADMINS.LABEL_02018' | translate }}">
			<div style="width: 100%; height: 100%; margin-bottom: 5px;">
				<eim-data-grid #accessEntryGrid [equals]="equalsAccessEntry" (selected)="onSelectAccessEntry($event)"
					style="height: 100%;" [multiple]="false"></eim-data-grid>
			</div>
		</p-panel>
	</div>

	<!-- アクセス権限 -->
	<div class="eim-access-role">
		<p-blockUI [target]="authPnl" [blocked]="blockFlag">
		</p-blockUI>
		<p-panel #authPnl class="eim-panel-containing-grid" header="{{ 'EIM_ADMINS.LABEL_02031' | translate }}">
			<div style="width: 100%; height: calc(100% - 20px); overflow: auto;">
				<table>
					<thead>
						<tr>
							<td>{{ 'EIM_ADMINS.LABEL_02032' | translate }}</td><!-- 許可 -->
							<td>{{ 'EIM_ADMINS.LABEL_02033' | translate }}</td><!-- 拒否 -->
							<td>{{ 'EIM_ADMINS.LABEL_02034' | translate }}</td><!-- 無視 -->
							<td></td>
						</tr>
					</thead>
					<tbody>
						<tr *ngFor="let accessRole of accessRoleList">
							<td>
								<eim-radio-button class="eim-form-item forCenter" disabled="true" name="{{accessRole.roleId}}" value="1" [(ngModel)]="accessRole.permit"></eim-radio-button>
							</td>
							<td>
								<eim-radio-button class="eim-form-item forCenter" disabled="true" name="{{accessRole.roleId}}" value="0" [(ngModel)]="accessRole.permit"></eim-radio-button>
							</td>
							<td>
								<eim-radio-button class="eim-form-item forCenter" disabled="true" name="{{accessRole.roleId}}" value="2" [(ngModel)]="accessRole.permit"></eim-radio-button>
							</td>
							<td>
								{{accessRole.dispName}}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</p-panel>
	</div>
</div>

