<div style="height: 100%;">
	<as-split #split id="split" direction="horizontal" >

		<!-- 属性 -->
		<as-split-area id="splitLeft" [size]="splitSetting.splitLeft.size">
			<div class="eim-admin-right-panel" style="width: 100%">
				<p-panel class="eim-panel-containing-grid" header="{{'EIM_ADMINS.LABEL_02070' | translate}}">
					<form (ngSubmit)="onSearch($event)" style="height: 100%;" eim-vertical-container autocomplete="off">
						<div class="eim-form-item" style="height: 30px; min-width: 300px;">
							<div style="width: 700px;">
								<label class="eim-form-label" style="width: 140px;">{{'EIM_ADMINS.LABEL_02004' | translate}}</label>
								<input type="text" pInputText name="attributeName" [(ngModel)]="attributeName" maxlength="{{inputMaxLength}}" style="width: calc(100% - 260px);"/>
								<button pButton type="button" label="{{ 'EIM.LABEL_03007' | translate }}" class="p-button-primary" icon="eim-icon-search"
									style="margin-left: 3px; width: 120px;" (click)="onSearch($event)"></button>
							</div>
						</div>
						<div class="eim-data-grid-menu">
							<eim-menubar [model]="attributeMenuItems"></eim-menubar>
						</div>
						<div class="eim-flexible-height">
							<eim-data-grid [multiple]="false" class="eim-user-list" #attributeDataGrid [contextMenuItems]="attributeContext"
								[equals]="equalsAttribute" (selected)="onSelectedDocumentAttribute($event)"></eim-data-grid>
						</div>
					</form>
				</p-panel>
			</div>
		</as-split-area>

		<!-- 値リスト定義 -->
		<as-split-area [size]="100 - splitSetting.splitLeft.size">
			<div class="eim-admin-right-panel" style="width: 100%">
				<p-panel class="eim-panel-containing-grid" header="{{'EIM_ADMINS.LABEL_02099' | translate}}">
					<div style="height: calc(100% + 2px); padding-right: 4px;" eim-vertical-container>
						<div class="eim-data-grid-menu" >
							<eim-menubar [model]="valueListMenuItems"></eim-menubar>
						</div>
						<div class="eim-flexible-height">
							<eim-data-grid [multiple]="false" class="eim-user-list" #valueListDataGrid [contextMenuItems]="valueListContext"
								[equals]="equalsListValue" (selected)="onSelectedValueList($event)"></eim-data-grid>
						</div>
					</div>
				</p-panel>
			</div>
		</as-split-area>

	</as-split>
</div>
