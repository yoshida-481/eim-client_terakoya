<form #relationUpdatorForm="ngForm" class="eim-form-wide" style="height: 100%;" autocomplete="off" novalidate>
	<as-split direction="vertical">
		<as-split-area [size]="splitAreaFirstSize" class="eim-narrow-margin-bottom">
			<div *ngIf="relation" class="eim-narrow-margin-right">
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM.LABEL_02027' | translate }}</label>
					<div class="eim-form-input">
						<input name="id" type="text" pInputText [ngModel]="relation.id" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM.LABEL_02019' | translate }}</label>
					<div class="eim-form-input">
						<input name="_type" type="text" pInputText [ngModel]="relation.type.name" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02076' | translate }}</label>
					<div class="eim-form-input">
						<input name="parentObjId" type="text" pInputText [ngModel]="parentObjId" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02003' | translate }}</label>
					<div class="eim-form-input">
						<input name="parentObjName" type="text" pInputText [ngModel]="relation.parent.name" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02077' | translate }}</label>
					<div class="eim-form-input">
						<input name="childObjId" type="text" pInputText [ngModel]="childObjId" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02004' | translate }}</label>
					<div class="eim-form-input">
						<input name="childObjName" type="text" pInputText [ngModel]="relation.child.name" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
			</div>
		</as-split-area>
		<as-split-area [size]="100 - splitAreaFirstSize" class="eim-narrow-margin-top">
			<div style="margin-right: 5px;">
				<eim-attribute-list *ngIf="relation"
					[form]="relationUpdatorForm.form"
					[(attributes)]="relation.attributeList">
				</eim-attribute-list>
			</div>
		</as-split-area>
	</as-split>
</form>