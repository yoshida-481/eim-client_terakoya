<div style="height: 100%;">
	<as-split direction="horizontal">
		<as-split-area [size]="splitAreaLeftSize" [ngStyle]="{'overflow': 'hidden'}">
			<div class="eim-admin-left-panel">
				<p-panel class="eim-panel-containing-grid" header="{{ 'EIM_ADMINS.LABEL_02358' | translate }}">
					<div style="height: 100%;" eim-vertical-container>
						<!-- <div class="eim-data-grid-menu" style="display: flex;">
							<span style="width: 100%;"></span>
							<button pButton
									class="p-button-primary ui-rtl" style="margin-left: 5px; margin-top: 3px;" icon="fa fa-refresh"
									(click)="onClickRefresh()"></button>
						</div> -->
						<div class="eim-flexible-height">
							<!-- キャッシュツリー -->
							<eim-tree #cacheTree
									(selected)="onSelectedCacheTreeNode($event)" (expanded)="onExpandedCacheTreeNode($event)"
									style="width: 100%;" [equals]="equalsForTree"></eim-tree>
						</div>
					</div>
				</p-panel>
			</div>
		</as-split-area>
		<as-split-area [size]="100 - splitAreaLeftSize">
			<div class="eim-admin-right-panel">
				<p-panel class="eim-panel-containing-grid" header="{{ 'EIM_ADMINS.LABEL_02312' | translate }}">
					<form #conditionForm="ngForm" style="height: 100%; display: block;" eim-vertical-container>
						<!-- 検索条件 -->
						<div class="ui-g basic-condition" style="width: 100%;">
							<div class="ui-g-12" style="width: 100%; padding: 0px; display: flex;">
								<div class="eim-form-item">
									<div class="eim-form-input" style="display: flex; width: 100%;">
										<label class="eim-form-label" style="width: 30px;">{{ 'EIM.LABEL_02027' | translate }}</label>
										<input name="cacheIds" required="false" style="width: 450px;" pInputText
												[(ngModel)]="cacheEntryIds" [disabled]="!isSelectedChache"
												placeholder="{{ 'EIM_ADMINS.LABEL_02313' | translate }}"
												pattern="^[,0-9]+$" maxlength="{{inputMaxLength}}"/>
									</div>
								</div>
								<div class="eim-form-item">


									<!-- 検索 -->
									<button pButton label="{{ 'EIM.LABEL_03007' | translate }}"
											class="p-button-primary" style="margin-left: 5px;" icon="eim-icon-search"
											(click)="onClickSearch()" [disabled]="!isSelectedChache || conditionForm.invalid"></button>
									<!-- 検索してCSVダウンロード -->
									<!-- <button pButton label="{{ 'EIM_ADMINS.LABEL_03026' | translate }}"
											class="p-button-primary" style="margin-left: 5px; margin-top: 3px;" icon="fa fa-download"
											(click)="onClickSearch()" [disabled]="!isSelectedChache"></button> -->
								</div>
							</div>
						</div>
						<div class="eim-data-grid-menu" style="display: flex;">
							<eim-menubar [model]="entryMenuItems"></eim-menubar>
							<span class="ui-rtl" style="width: 100%; padding-top: 5px; margin-right: 5px;" dir="rtl">{{cacheEntrySearchResultSizeLabel}}</span>
						</div>

						<!-- キャッシュエントリー -->
						<div class="ui-g eim-flexible-height" style="display: flex; padding: 0px">
							<div style="height: 100%; width: 100%;">
								<div eim-vertical-container style="width: 100%; height: 100%;">
									<div class="eim-flexible-height">
										<eim-data-grid #cacheEntryDataGrid (selected)="onSelectCacheEntry()" style="height: 100%;"
											[contextMenuItems]="entryMenuItems" [equals]="equalsForDataGrid"
											[multipe]="true" [showAllSelectButton]="true"></eim-data-grid>
									</div>
								</div>
							</div>
						</div>
					</form>
				</p-panel>
			</div>
		</as-split-area>
	</as-split>
</div>
