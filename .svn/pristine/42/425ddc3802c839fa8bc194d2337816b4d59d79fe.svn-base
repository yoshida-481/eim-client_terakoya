<form #electronicSignatureForm="ngForm" style="height: 100%;" eim-vertical-container>
	<div style="width: 100%; margin-bottom: 3px;">
		<as-split direction="horizontal" style="display: flex;">
			<eim-radio-button class="eim-form-item button-down" name="doSignPDF" label="{{ 'EIM.LABEL_02044' | translate }}" value="true" [(ngModel)]="doSignPDF" [disabled]="allDisabled != false"></eim-radio-button>
			<div style="padding-left: 20px;"></div>
			<eim-radio-button class="eim-form-item button-down" name="doSignPDF" label="{{ 'EIM.LABEL_02045' | translate }}" value="false" [(ngModel)]="doSignPDF" [disabled]="allDisabled != false"></eim-radio-button>
		</as-split>
	</div>
	<div class="eim-flexible-height">
		<p-blockUI [target]="pnl" [blocked]="blocked()">
		</p-blockUI>
		<p-panel #pnl [showHeader]="false" [style]="{'height': '100%', 'width':'100%'}">
			<div class="eim-form-item" style="width: 100%; display: flex; height: 100%;">
				<eim-checkbox name="approvaldate" [disabled]="doSignPDF !== 'true' || allDisabled != false" binary="true"
					[(ngModel)]="approvaldate" label="{{ 'EIM_DOCUMENTS.LABEL_02158' | translate }}"></eim-checkbox>
			</div>
			<div class="eim-form-item" style="width: 100%; display: flex; height: 100%; align-items: center;">
				<div class="eim-form-input" style="width: 150px">
					<eim-checkbox name="approver"
							[disabled]="doSignPDF !== 'true' || allDisabled != false"  binary="true"
							(onChange)="onChangeApprover($event)"
							[(ngModel)]="approver" label= "{{ 'EIM_DOCUMENTS.LABEL_02159' | translate }}"></eim-checkbox>
				</div>
				<div class="eim-form-item" style="display: flex; width: 290px; height: 100%; align-items: center;">
					<div class="eim-form-input" style="width: calc(100% - 162px);">
						<eim-radio-button name="insertApproveUser" value="1" [(ngModel)]="insertApproveUser" label="{{ 'EIM_DOCUMENTS.LABEL_02160' | translate }}"
							[disabled]="doSignPDF !== 'true' || approver != true || allDisabled != false">
						</eim-radio-button>
					</div>
					<div class="eim-form-input" style="width: calc(100% - 162px);">
						<eim-radio-button name="insertApproveUser" value="2" [(ngModel)]="insertApproveUser" label="{{ 'EIM_DOCUMENTS.LABEL_02161' | translate }}"
							[disabled]="doSignPDF !== 'true' || approver != true || allDisabled != false">
						</eim-radio-button>
					</div>
				</div>
			</div>

			<ng-container *ngIf="checkSignUseTool() == 1">
				<div class="eim-form-item" style="width: 100%; display: flex; height: 100%; align-items: center;">
					<div class="eim-form-input" style="width: 150px;padding-left:21px;">
						<label class="eim-form-label">{{ 'EIM_DOCUMENTS.LABEL_02162' | translate }}</label>
					</div>
					<div class="eim-form-item" style="display: flex; height: 100%; align-items: center; width: 290px;">
					<eim-radio-button name="insertPage" label="{{ 'EIM_DOCUMENTS.LABEL_02163' | translate }}" value="1" [(ngModel)]="insertPage" [disabled]= "doSignPDF !== 'true' || allDisabled != false"></eim-radio-button>
						<div style="padding-left: 34px;"></div>
					<eim-radio-button name="insertPage" label="{{ 'EIM_DOCUMENTS.LABEL_02164' | translate }}" value="0" [(ngModel)]="insertPage" [disabled]= "doSignPDF !== 'true' || allDisabled != false"></eim-radio-button>
					</div>
				</div>
				<div class="eim-form-item" style="width: 100%; display: flex; height: 100%; align-items: center;">
					<div class="eim-form-input" style="width: 150px;padding-left:21px;">
						<label class="eim-form-label">{{ 'EIM_DOCUMENTS.LABEL_02165' | translate }}</label>
					</div>
					<div class="eim-form-input" style="display: flex; width: 290px;">
						<label class="eim-form-label">{{ 'EIM_DOCUMENTS.LABEL_02166' | translate }}</label>
					</div>
				</div>
				<div class="eim-form-item" style="width: 100%; display: flex; height: 100%; align-items: center;">
					<div class="eim-form-input" style="width: 150px;">
					</div>
					<div class="eim-form-item" style="display: flex; height: 100%; align-items: center; width: 290px;">
						<eim-radio-button name="insertPlace" label="{{ 'EIM_DOCUMENTS.LABEL_02167' | translate }}" value="0" [(ngModel)]="insertPlace" [disabled]= "doSignPDF !== 'true' || allDisabled != false"></eim-radio-button>
						<div style="padding-left: 10px;"></div>
						<eim-radio-button name="insertPlace" label="{{ 'EIM_DOCUMENTS.LABEL_02168' | translate }}" value="1" [(ngModel)]="insertPlace" [disabled]= "doSignPDF !== 'true' || allDisabled != false"></eim-radio-button>
						<div style="padding-left: 10px;"></div>
						<eim-radio-button name="insertPlace" label="{{ 'EIM_DOCUMENTS.LABEL_02169' | translate }}" value="2" [(ngModel)]="insertPlace" [disabled]= "doSignPDF !== 'true' || allDisabled != false"></eim-radio-button>
						<div style="padding-left: 10px;"></div>
						<eim-radio-button name="insertPlace" label="{{ 'EIM_DOCUMENTS.LABEL_02170' | translate }}" value="3" [(ngModel)]="insertPlace" [disabled]= "doSignPDF !== 'true' || allDisabled != false"></eim-radio-button>
					</div>
				</div>
				<div class="eim-form-item" style="width: 100%; display: flex; height: 100%; align-items: center;">
					<div class="eim-form-item" style="display: flex; height: 100%; align-items: center; width:100%;">
					<label class="eim-form-label" style="text-align: right; width: 100%">{{ 'EIM_DOCUMENTS.LABEL_02171' | translate }} X = </label>
						<input name="insertPlaceX" pInputText [(ngModel)]="insertPlaceX" style="width: 100px;"
						pattern="{{insertionPositionNumber}}" maxlength="{{insertionPositionDigit}}" [disabled]= "doSignPDF !== 'true' || allDisabled != false">
						<label style="padding-left: 5px; padding-right: 40px;">mm</label>
					</div>
				</div>
				<div class="eim-form-item" style="width: 100%; display: flex; height: 100%; align-items: center;">
					<div class="eim-form-item" style="display: flex; height: 100%; align-items: center; width: 100%;">
						<label class="eim-form-label" style="text-align: right; width: 100%;">Y = </label>
						<input name="insertPlaceY" pInputText [(ngModel)]="insertPlaceY" style="width: 100px;"
						pattern="{{insertionPositionNumber}}" maxlength="{{insertionPositionDigit}}" [disabled]="doSignPDF !== 'true' || allDisabled != false">
						<label style="padding-left: 5px; padding-right: 40px;">mm</label>
					</div>
				</div>
			</ng-container>
			<ng-container *ngIf="checkSignUseTool() == 2">
				<div class="eim-form-item">
					<label class="eim-form-label" style="width: 35%;">{{ 'EIM_ADMINS.LABEL_02359' | translate:lang }}</label>
					<div class="eim-form-input">
						<p-select name="langSelectItems" [options]="langSelectItems" [(ngModel)]="selectLang"
							[style]="{'width': '100%'}"></p-select>
					</div>
				</div>
				<div class="eim-form-item">
					<label class="eim-form-label eim-form-label-required" style="width: 35%;">{{ 'EIM_ADMINS.LABEL_02360' |
						translate:lang }}</label>
					<div class="eim-form-input">
						<input name="sign_job_name" required="true" type="text" pInputText [(ngModel)]="signJobName"
							maxlength="{{inputMaxLength}}" style="width: 100%;" />
					</div>
				</div>
			</ng-container>
		</p-panel>
	</div>
</form>