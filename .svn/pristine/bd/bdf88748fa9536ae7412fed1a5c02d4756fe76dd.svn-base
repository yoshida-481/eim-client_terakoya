::ng-deep .eim-attribute-detail .eim-form-item {
	margin-left: 6px;
	margin-right: 6px;
}

::ng-deep .eim-attribute-detail eim-attribute-default .eim-form-label {
	width: calc(20% - 1px);
}
/* 2022.05 新規 コードタイプの検索・クリアボタン用 */
::ng-deep eim-form-attribute-creator .eim-attribute-detail .eim-form-item .eim-form-input-selected-list .p-button {
    border: 1px solid #2399e5;
    color:#FFFFFF;
    background: #2399e5;
	padding: 0px;
    vertical-align: bottom;
}
/* 2022.05 新規 コードタイプの検索・クリアボタン用 */
::ng-deep eim-form-attribute-creator .eim-attribute-detail .eim-form-item .eim-form-input-selected-list button:enabled:hover {
    border: 1px solid #1f89ce;
    background: #1f89ce;
}
/* 2022.05 新規 コードタイプの検索・クリアボタン用 */
::ng-deep eim-form-attribute-creator .eim-attribute-detail .eim-form-item .eim-form-input-selected-list .p-button .p-button-label {
    padding: .25em 1em;
}