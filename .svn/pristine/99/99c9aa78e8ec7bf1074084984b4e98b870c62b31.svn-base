// ==========================================================================
//	eim-input-for-selection
//
//    選択値表示用の入力部品表示用スタイル
//
//    選択値表示（.p-inputtext）＋検索ボタン
//
//    <input class="eim-input-for-selection"></input>
//
// ==========================================================================
@use '_variables' as *;

::ng-deep .eim-input-for-selection {
	height: $eim-input-height;
	width: 100%!important;
	display: inline-block!important;
	vertical-align: middle!important;
	overflow-y: auto!important;
	padding: 0px 1px!important;
}

// 有効（編集可）
::ng-deep .eim-input-for-selection {
	color: $eim-enabled-input-color;
	font-weight: $eim-enabled-input-font-weight;
	background: $eim-selectabled-input-background!important;
	border: $eim-enabled-input-border;
	border-radius: $eim-enabled-input-border-radius;
}

// 無効（編集不可）
::ng-deep .eim-input-for-selection.eim-disabled {
	color: $eim-disabled-input-color;
	font-weight: $eim-disabled-input-font-weight;
	background: $eim-disabled-input-background;
	border: $eim-disabled-input-border;
	border-radius: $eim-disabled-input-border-radius;
}

// マウスオーバー、有効（編集可）
::ng-deep .eim-input-for-selection:not(.eim-disabled):hover {
	color: $eim-hovered-enabled-input-color;
	font-weight: $eim-hovered-enabled-input-font-weight;
	background: $eim-hovered-enabled-input-background;
	border: $eim-hovered-enabled-input-border;
	border-radius: $eim-hovered-enabled-input-border-radius;
}
// マウスオーバー、無効（編集不可）
::ng-deep .eim-input-for-selection.eim-disabled:hover {
	color: $eim-hovered-disabled-input-color;
	font-weight: $eim-hovered-disabled-input-font-weight;
	background: $eim-hovered-disabled-input-background;
	border: $eim-hovered-disabled-input-border;
	border-radius: $eim-hovered-disabled-input-border-radius;
}
