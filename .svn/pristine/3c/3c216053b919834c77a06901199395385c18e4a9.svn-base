<form #fileCombineForm="ngForm" style="width: 100%; height: 100%;" autocomplete="off">
	<div style="height: 100%; padding-top: 0px; padding-left: 0px; padding-bottom: 0px;" eim-vertical-container adjustedValue="-5">
		<div style="margin-bottom: 10px;">
			<div class="eim-form-item">
				<label class="eim-form-label eim-form-label-required">{{ 'EIM_DOCUMENTS.LABEL_02001' | translate }}</label>
				<div class="eim-form-input" >
					<p-select name="type" [options]="typeSelectItems" placeholder="{{ 'EIM.INFO_00002' | translate }}" required="true"
							[(ngModel)]="selectedTypeId" (onChange)="onChangeType($event)"
							[disabled]="creating" [filter]="true" [autoWidth]="true" [style]="{'width':'calc(100% - 30px)'}"></p-select>
					<button pButton type="button" severity="info" class="icon-only-button"
							[disabled]="creating" icon="fa-fw fa fa-external-link" style="float: right;" pTooltip="{{ 'EIM.LABEL_03006' | translate }}"
							(click)="onClickShowObjectTypeSelector($event)"></button>
				</div>
			</div>
			<eim-text-input-form-item [(ngModel)]="path" name="path" label="{{ 'EIM_DOCUMENTS.LABEL_02051' | translate }}" [disabled]="true"></eim-text-input-form-item>
			<div class="eim-form-item">
				<label class="eim-form-label eim-form-label-required">{{ 'EIM.LABEL_02002' | translate }}</label>
				<div class="eim-form-input" style="display: flex;">
					<input type="text" name="folderName" pInputText
							[disabled]="creating" [(ngModel)]="name" style="width: 100%;" required="true"
							maxlength="{{inputMaxLength}}"/>{{PDF_EX}}
				</div>
			</div>
		</div>

		<div class="eim-flexible-height" style="height: 100%; width: 100%; display: flex;">
			<div eim-vertical-container style="height: 100%; width: calc(100% - 35px);">
				<div style="width: 100%; margin-bottom: 3px;">
					<div style="margin-top: 3px;">
						<div class="eim-data-grid-menu" style="display: flex;">
							<eim-menubar [model]="documentMenuItems"></eim-menubar>
						</div>
					</div>
				</div>

				<div class="eim-flexible-height" style="width: 100%;">
					<eim-data-grid #documentList [contextMenuItems]="contextMenuItems"
						(contextmenu)="onContextMenuContentsList($event)" (selected)="onSelectFile($event)"></eim-data-grid>
				</div>
			</div>
			<div style="height: 100%; width: 35px; display: table;">
				<div style="vertical-align: middle; float: none; display: table-cell;">
					<button pButton class="p-button-success" type="button" pTooltip="{{ 'EIM.LABEL_03029' | translate }}" icon="fa fa-arrow-up" (click)="onClickUp($event)" style="width: 30px; height: 30px; margin-left: 5px; margin-bottom: 10px;"></button>
					<button pButton class="p-button-success" type="button" pTooltip="{{ 'EIM.LABEL_03030' | translate }}" icon="fa fa-arrow-down" (click)="onClickDown($event)" style="width: 30px; height: 30px; margin-left: 5px;"></button>
				</div>
			</div>
		</div>

		<div style="width: 100%; height: 200px;">
			<eim-master-contents-approve-workflow-diagram #workflowDiagram
					[multiple]="false"></eim-master-contents-approve-workflow-diagram>
		</div>
	</div>

</form>
