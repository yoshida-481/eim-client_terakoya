<div class="eim-login">
	<eim-message [ngClass]="fontSizeClass"></eim-message>
	<div class="eim-login-form">

		<div style="height: 10px; background: linear-gradient(135deg, #325EE8, #00D9FF, #A8EB4A, #339E00);"></div>

		<div class="eim-login-logo">
			<img [src]="logoSrc" class="eim-login-logo-icon">
		</div>

		<form style="padding-right: 40px; padding-left: 40px;" [formGroup]="loginForm" autocomplete="off" novalidate>

			<label><i class="fa eim-icon-user"></i>{{ 'EIM.LABEL_02014' | translate}}</label>
			<div class="eim-form-item">
				<div style="display: flex; width:100%;">
					<input pInputText #focusTarget style="width: 100%;" id="userCode" name="userCode" required="true" maxlength="{{inputMaxLength}}"
						[formControl]="loginForm.controls['userCode']"/>
				</div>
			</div>

			<label><i class="fa eim-icon-lock"></i>{{ 'EIM.LABEL_02015' | translate}}</label>
			<div class="eim-form-item">
				<div style="display: flex; width:100%;">
					<input pInputText style="width: 100%;" id="password" name="password" required="true" type="password" pattern="{{regexpPassword}}" maxlength="{{inputMaxLength}}"
						[formControl]="loginForm.controls['password']"/>
				</div>
			</div>

			<label><i class="fa fa-globe" style="font-size: 1.2em; margin-top: 0px;"></i>{{ 'EIM.LABEL_02016' | translate}}</label>
			<div class="eim-form-item">
				<div style="display: flex; width:100%;">
					<p-select id="language" name="language" [options]="languages" optionLabel="label" optionValue="value" [style]="{'width':'100%'}" [formControl]="loginForm.controls['language']"></p-select>
				</div>
			</div>

			<div style="width: 100%; padding-top: 20px; display: flex; margin-top: 30px;">
				<button pButton class="eim-login-button" label="Login" icon="fa eim-icon-enter" iconPos="right"
						[disabled]="!canLogin()" (click)="onLogin()"></button>
			</div>

		</form>

	</div>
</div>

