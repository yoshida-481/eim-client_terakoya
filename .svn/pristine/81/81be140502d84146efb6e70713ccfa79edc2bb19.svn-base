:host {
	position: absolute;
	background-color: #c4eefc;
	border: 1px dotted darkgrey;
}

div {
	align-items: center;
	padding: 0 5px;
}

ul {
	margin: 0;
	padding: 0;
	list-style-type: none;
}

li {
	height: 25px;
	line-height: 25px;
	display: flex;
	align-items: center;
}

i, pre {
	padding: 0 3px;
}

pre {
	color: #04C;
	text-decoration: underline;
}
