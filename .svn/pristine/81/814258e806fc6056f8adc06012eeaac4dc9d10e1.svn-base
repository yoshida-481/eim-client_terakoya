<form #documentForm="ngForm" class="p-grid" style="width: 100%; height: 100%; margin-right: -2px;" autocomplete="off">
	<div class="p-col-6" style="height: 100%; padding-top: 0px; padding-left: 0px; padding-bottom: 5px;" eim-vertical-container adjustedValue="-2">
		<div style="margin-bottom: 10px;">
			<div class="eim-form-item">
				<label class="eim-form-label eim-form-label-required">{{ 'EIM_DOCUMENTS.LABEL_02001' | translate }}</label>
				<div class="eim-form-input" >
					<p-select name="objType" [options]="typeSelectItems" placeholder="{{ 'EIM.INFO_00002' | translate }}" required="true"
							[(ngModel)]="selectedTypeId" (onChange)="onChangeType($event)"
							[disabled]="creating" [filter]="true" [autoWidth]="true" [style]="{'width':'calc(100% - 30px)'}"></p-select>
					<button pButton type="button" icon="fa-fw fa fa-external-link" severity="info" class="icon-only-button" style="float: right;" pTooltip="{{ 'EIM.LABEL_03006' | translate }}"
							[disabled]="creating"
							(click)="onClickShowObjectTypeSelector($event)"></button>
				</div>
			</div>
			<eim-text-input-form-item name="path" [(ngModel)]="path" label="{{ 'EIM_DOCUMENTS.LABEL_02051' | translate }}" [disabled]="true"></eim-text-input-form-item>
			<div class="eim-form-item">
				<label class="eim-form-label eim-form-label-required">{{ 'EIM.LABEL_02030' | translate }}</label>
				<div class="eim-form-input eim-form-input-selected-list" style="display: flex;">
					<input name="creator" type="text" pInputText [(ngModel)]="createUser.name" [disabled]="true" style="width: calc(100% - 30px);"/>
					<button pButton type="button" icon="fa-fw fa fa-external-link" severity="info" class="icon-only-button" style="margin-left: 5px; float: right;" pTooltip="{{ 'EIM.LABEL_03006' | translate }}"
							(click)="onClickSelectCreator($event)"
							 [disabled]="creating"></button>
				</div>
			</div>
			<div class="eim-form-item">
				<label class="eim-form-label eim-form-label-required">{{ 'EIM.LABEL_02002' | translate }}</label>
				<div class="eim-form-input" style="display: flex;">
					<input type="text" name="coverName" pInputText maxlength="{{inputMaxLength}}"
							[disabled]="creating" [(ngModel)]="name" style="width: 100%;" required="true"/>{{PDF_EX}}
				</div>
			</div>
		</div>

		<div class="eim-flexible-height" style="padding-bottom: 5px;">
			<eim-master-contents-approve-workflow-diagram #workflowDiagram (errored)="workflowDiagramErroed()"></eim-master-contents-approve-workflow-diagram>
		</div>

	</div>
	<div class="p-col-6" style="height: 100%; padding-top: 0px; padding-right: 0px; padding-bottom: 0px;">
		<p-tabs [value]="0">
			<p-tablist>
				<p-tab [value]="0">{{ 'EIM_DOCUMENTS.LABEL_02028' | translate }}</p-tab>
			</p-tablist>
			<p-tabpanels>
				<p-tabpanel [value]="0" class="eim-document-creator-property-panel">
					<div style="padding:5px; height: 100%">
										<ng-container *ngIf="displayProperty">
					<div style="height: calc(100% - 30px); overflow-x: hidden; overflow-y: auto;">
						<eim-contents-attribute-list-input-form-item [form]="documentForm.form"
							[(attributeList)]="attributeList" [(attributeTypeLayoutList)]="attributeTypeLayoutList"
							[disabled]="creating" (attrCheckBoxClicked)="onClickAttributeCheckBox()">
						</eim-contents-attribute-list-input-form-item>
					</div>
					<div style="margin-left: 17px; display: flex;">
						<eim-checkbox class="eim-form-item p-chk-box padding-top-set" name="allCheckFlag"
							label="{{'EIM_DOCUMENTS.LABEL_03057' | translate}}" binary="true" [(ngModel)]="propertyAllCheckFlag"
							(click)="onChangePropertyAllCheckFlag($event)" [disabled]="disabled">
						</eim-checkbox>
						<button pButton type="button" class="p-button-secondary" style="margin-left: 10px;" icon="eim-icon-copy"
							label="{{'EIM_DOCUMENTS.LABEL_03034' | translate}}" [disabled]="propertyCopyPeastDisabled"
							(click)="onClickPropertyCopy($event)"></button>
						<button pButton type="button" class="p-button-secondary" style="margin-left: 5px;" icon="eim-icon-paste"
							label="{{'EIM_DOCUMENTS.LABEL_03036' | translate}}"
							[disabled]="propertyCopyPeastDisabled || disablePasteFlag"
							(click)="onClickPropertyPaste($event)"></button>
					</div>
				</ng-container>
					</div>
				</p-tabpanel>
			</p-tabpanels>
		</p-tabs>
	</div>
</form>


