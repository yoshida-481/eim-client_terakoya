<div style="height: 100%;">
	<form #roleCreatorForm="ngForm" class="p-grid" style="width: 100%; height: 100%;" autocomplete="off">
		<div style="width: 100%; height: 100%; padding-top: 0px; padding-left: 0px; padding-bottom: 0px;" eim-vertical-container>
			<div style="margin-bottom: 10px;">
				<div class="eim-form-item">
					<label class="eim-form-label eim-form-label-for-role-create">{{'EIM_ADMINS.LABEL_02127' | translate }}</label>
					<div class="eim-form-input eim-form-input-for-role-create" style="display: flex">
						<div class="eim-form-input-default eim-form-input-for-search-and-clear">
							<div class="eim-form-input-text-for-search-and-clear">
								<label style="float:left; white-space: nowrap;">{{parentRoleName}}</label>　<!-- 空白を入れないと削除時に1pxずれる -->
							</div>
							<div *ngIf="parentRoleName" align="right">
								<i class="fa fa-times" style="padding-right:5px;"  (click)="onClickDeleteParentRole($event)"></i>
							</div>
						</div>
						<button pButton type="button" icon="fa-fw fa fa-external-link" severity="info" class="icon-only-button" style="margin-left: 5px; float: right;"
							pTooltip="{{ 'EIM.LABEL_03006' | translate }}" (click)="onClickShowRoleSelector($event);"
							[disabled]="false"></button>
					</div>
				</div>

				<div *ngFor="let lang of languages;" class="eim-form-item">
					<label class="eim-form-label eim-form-label-for-role-create eim-form-label-required" style="width: 40%;">{{ 'EIM_ADMINS.LABEL_02003' | translate:lang }}</label>
					<div class="eim-form-input eim-form-input-for-role-create">
						<input name="name_{{lang.lang}}" type="text" required="true" pInputText [(ngModel)]="nameList[lang.lang]" maxlength="{{inputMaxLength}}" style="width: 90%;"/>
					</div>
				</div>

				<div class="eim-form-item">
					<label class="eim-form-label" style="width: 50%;"><b>{{ 'EIM_ADMINS.LABEL_02093' | translate }}</b></label>
				</div>
				<div class="eim-role-creator-attribute-area">
					<eim-user-attribute-list-input-form-item
						[(attributeList)]="attributeList" [form]="roleCreatorForm.form">
					</eim-user-attribute-list-input-form-item>
				</div>
			</div>
		</div>
	</form>
</div>
