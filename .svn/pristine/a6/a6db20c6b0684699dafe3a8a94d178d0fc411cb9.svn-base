<label [ngClass]="{'eim-form-label': true}" style="margin-left: 10px;white-space: nowrap;">{{label}}</label>
<div class="eim-form-item" style="width: 100%">
	<ng-container *ngIf="value">
		<div class="eim-form-input" style="display: flex; width: 100%; margin-left: 10px; margin-right: 6px">
			<div style="width: calc(50% - 18px); margin-right: 10px;">
					<input name="{{name + 'From'}}" pInputText style="width: 100%;"
								type="number" [(ngModel)]="value[0]" [disabled]="disabled" [maxlength]="maxlength"
								[ngClass]="{'ng-invalid': (formControl ? (formControl.dirty && formControl.invalid) : false), 'ng-dirty': (formControl ? formControl.dirty : true)}"
								(change)="onChange($event, 0)"/>
				</div>
				<div class="center" style="height:100%; display: initial;"><label class="eim-form-label">{{DELIMITER_TIDE}}</label></div>
				<div style="width: calc(50% - 18px);">
					<input name="{{name + 'To'}}" pInputText style="width: 100%;"
								type="number" [(ngModel)]="value[1]" [disabled]="disabled" [maxlength]="maxlength"
								[ngClass]="{'ng-invalid': (formControl ? (formControl.dirty && formControl.invalid) : false), 'ng-dirty': (formControl ? formControl.dirty : true)}"
								(change)="onChange($event, 1)"/>
			</div>
			</div>
	</ng-container>
</div>
