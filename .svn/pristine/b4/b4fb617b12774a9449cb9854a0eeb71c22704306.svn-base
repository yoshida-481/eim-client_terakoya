<div class="p-grid" style="width: 100%; height: 100%; margin-bottom: 5px;">
	<form *ngIf="displaySearch" class="eim-security" (ngSubmit)="onSearchSecurity()" autocomplete="off">
		<!-- セキュリティ -->
		<p-panel class="eim-panel-containing-grid" header="{{ 'EIM_DOCUMENTS.LABEL_02003' | translate }}">
			<div eim-vertical-container style="height: 100%;">

				<div class="eim-form-item" style="width: 100%;">
					<label class="eim-form-label">{{ 'EIM_DOCUMENTS.LABEL_02000' | translate }}</label>
					<div class="eim-form-input" style="display: flex;">
						<!-- 名前 -->
						<input pInputText style="width: 87%;" id="securityName" name="securityName" required="false" [(ngModel)]="securityName" maxlength="{{inputMaxLength}}"/>
						<button pButton type="button" severity="info" class="icon-only-button" pTooltip="{{ 'EIM_DOCUMENTS.LABEL_03024' | translate }}" style="float: right; margin-left: 5px;" icon="eim-icon-search" (click)="onSearchSecurity()"></button>
					</div>
				</div>

				<div style="width: 100%;" class="eim-flexible-height">
					<eim-data-grid #securityGrid (selected)="onSelectSecurity($event)" [componentService]="" [multiple]="false"></eim-data-grid>
				</div>
			</div>
		</p-panel>
	</form>
	<div [ngClass]="accessEntryClass">
		<!-- アクセスエントリー -->
		<p-blockUI #entryPnlBlock [target]="entryPnl" [blocked]="blockFlag">
		</p-blockUI>
		<p-panel #entryPnl class="eim-panel-containing-grid" header="{{ 'EIM_DOCUMENTS.LABEL_02004' | translate }}">
			<div style="width: 100%; height: 100%; margin-bottom: 5px;">
				<eim-data-grid #accessEntryGrid [equals]="equalsAccessEntry" (selected)="onSelectAccessEntry($event)" style="height: 100%;" [multiple]="false"></eim-data-grid>
			</div>
		</p-panel>
	</div>

	<!-- アクセス権限 -->
	<p-blockUI #authPnlBlock [target]="authPnl" [blocked]="blockFlag">
	</p-blockUI>
	<p-panel #authPnl class="eim-panel-containing-grid" header="{{ 'EIM_DOCUMENTS.LABEL_02005' | translate }}">
		<div class="eim-access-role" style="height: 100%; overflow: hidden;">
			<table>
				<thead>
					<tr>
						<td>{{ 'EIM_DOCUMENTS.LABEL_02006' | translate }}</td><!-- 許可 -->
						<td>{{ 'EIM_DOCUMENTS.LABEL_02007' | translate }}</td><!-- 拒否 -->
						<td>{{ 'EIM_DOCUMENTS.LABEL_02008' | translate }}</td><!-- 無視 -->
						<td></td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					<tr *ngFor="let accessRole of accessRoleList | eimContentsAccessRolePipe">
						<td style="text-align: center;">
							<eim-radio-button class="eim-form-item forCenter forCenter" disabled="true" name="{{accessRole.roleId}}" value="1" [(ngModel)]="accessRole.permit" (keydown)="onKeyDown($event)"></eim-radio-button>
						</td>
						<td style="text-align: center;">
							<eim-radio-button class="eim-form-item forCenter forCenter" disabled="true" name="{{accessRole.roleId}}" value="0" [(ngModel)]="accessRole.permit" (keydown)="onKeyDown($event)"></eim-radio-button>
						</td>
						<td style="text-align: center;">
							<eim-radio-button class="eim-form-item forCenter forCenter" disabled="true" name="{{accessRole.roleId}}" value="2" [(ngModel)]="accessRole.permit" (keydown)="onKeyDown($event)"></eim-radio-button>
						</td>
						<td>{{accessRole.dispName}}</td>
						<td>{{accessRole.selectedValue}}</td>
					</tr>
				</tbody>
			</table>
		</div>
		</p-panel>
</div>

