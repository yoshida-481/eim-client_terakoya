<div style="height: 155px;" class="eim-contents-search">
	<p-panel class="eim-panel-containing-grid" header="{{ 'EIM_ADMINS.LABEL_02073' | translate }}">
		<form #conditionForm="ngForm" eim-vertical-container style="height: 130px;" autocomplete="off" novalidate>
			<!-- 検索条件 -->
			<div class="p-grid basic-condition" style="height: 120px; min-width: 800px">
				<div style="width: 40%; min-width: 250px; padding-left: 0px; padding-right: 0px;">
					<div class="eim-form-item">
						<label class="eim-form-label" style="width: 70px; min-width: 70px;">{{ 'EIM_ADMINS.LABEL_02074' | translate }}</label>
						<div class="eim-form-input">
							<input name="userCode" type="text" pInputText [(ngModel)]="userCode" maxlength="{{inputMaxLength}}" style="width: calc(95% - 30px);"/>
						</div>
					</div>

					<div class="eim-form-item">
						<label class="eim-form-label" style="width: 70px; min-width: 70px;">{{ 'EIM_ADMINS.LABEL_02016' | translate }}</label>
						<div class="eim-form-input">
							<input name="userName" type="text" pInputText [(ngModel)]="userName" maxlength="{{inputMaxLength}}" style="width: calc(95% - 30px);"/>
						</div>
					</div>
					<div class="eim-form-item">
						<label class="eim-form-label" style="width: 70px; min-width: 70px;">{{ 'EIM_ADMINS.LABEL_02076' | translate }}</label>
						<div class="eim-form-input">
							<input name="userMail" type="text" pInputText [(ngModel)]="userMail" maxlength="{{inputMaxLength}}" style="width: calc(95% - 30px);"/>
						</div>
					</div>
				</div>

				<div style="width: 40%; min-width: 350px; margin-left: -30px; padding-left: 0px; padding-right: 0px;">
					<div class="eim-form-item">
						<label class="eim-form-label" style="width: 100px; min-width: 100px;">{{ 'EIM_ADMINS.LABEL_02077' | translate }}</label>
						<div class="eim-form-input">
							<input name="belongingGroupName" type="text" pInputText [(ngModel)]="belongingGroupName" maxlength="{{inputMaxLength}}" style="width: 95%;"/>
						</div>
					</div>

					<div class="eim-form-item">
						<label class="eim-form-label" style="width: 100px; min-width: 100px;"></label>
						<div class="eim-form-input">
							<eim-checkbox name="includingChildGroup" value="true" [(ngModel)]="includingChildGroup" binary="true" label="{{ 'EIM_ADMINS.LABEL_02079' | translate }}"></eim-checkbox>
						</div>
					</div>

					<div class="eim-form-item" style="padding-top: 10px;">
						<label class="eim-form-label" style="width: 100px; min-width: 100px;">{{ 'EIM_ADMINS.LABEL_02080' | translate }}</label>
						<div class="eim-form-input">
							<eim-radio-button name="dispFlag" label="{{ 'EIM_ADMINS.LABEL_02082' | translate }}" value="0" [(ngModel)]="dispFlag"></eim-radio-button>
							<eim-radio-button name="dispFlag" label="{{ 'EIM_ADMINS.LABEL_02083' | translate }}" value="1" [(ngModel)]="dispFlag"></eim-radio-button>
							<eim-radio-button name="dispFlag" label="{{ 'EIM_ADMINS.LABEL_02084' | translate }}" value="2" [(ngModel)]="dispFlag"></eim-radio-button>
						</div>
					</div>
				</div>

			<!-- 検索ボタン -->
				<div style="width: 130px; min-width:130px; padding-left: 5px; padding-bottom: 5px;">
					<div style="margin-left: auto; margin-top: 70px;">
						<button pButton label="{{ 'EIM.LABEL_03007' | translate }}" icon="eim-icon-search" class="eim-contents-search-btn p-button-primary" style="width: 120px;"
							(click)="onSearch()"></button>
					</div>
				</div>
			</div>
		</form>
	</p-panel>
</div>

<div style="height: calc(100% - 155px);">
	<div style="height: 100%;" eim-vertical-container>
		<div class="eim-data-grid-menu">
			<eim-menubar [model]="userMenuItems"></eim-menubar>
		</div>

		<div class="eim-flexible-height">
			<eim-data-grid #userDataGrid [equals]="userDataGridEquals" (selected)="onSelectedUser()" (changed)="onSelectedUser()"
				[contextMenuItems]="userContextMenuItems" [multiple]="false">
			</eim-data-grid>
		</div>
	</div>
</div>

