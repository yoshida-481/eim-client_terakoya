<div style="height: 100%;">
	<form #attributeTreeUpdatorForm="ngForm" class="p-grid" style="width: 100%; height: 100%;" autocomplete="off">
		<div style="width: 100%; height: 100%; padding-top: 0px; padding-left: 0px; padding-bottom: 0px; margin-bottom: 10px;" eim-vertical-container>
			<div *ngFor="let lang of languages;" class="eim-form-item">
				<label class="eim-form-label eim-form-label-required" style="width: 40%;">{{ 'EIM_ADMINS.LABEL_02003' | translate:lang }}</label>
				<div class="eim-form-input">
					<input name="name_{{lang.lang}}" type="text" required="true" pInputText [(ngModel)]="nameList[lang.lang]" maxlength="{{inputMaxLength}}" style="width: 100%;"/>
				</div>
			</div>
			<div class="eim-form-item">
				<label class="eim-form-label eim-form-label" style="width: 40%;">{{ 'EIM_ADMINS.LABEL_02266' | translate }}</label>
				<div class="eim-form-input">
					<eim-radio-button name="Categories" label="{{ 'EIM_ADMINS.LABEL_02267' | translate }}" value="0" [(ngModel)]="Categories"></eim-radio-button>
					<eim-radio-button name="Categories" label="{{ 'EIM_ADMINS.LABEL_02247' | translate }}" value="1" [(ngModel)]="Categories"></eim-radio-button>
				</div>
			</div>
		</div>
	</form>
</div>
