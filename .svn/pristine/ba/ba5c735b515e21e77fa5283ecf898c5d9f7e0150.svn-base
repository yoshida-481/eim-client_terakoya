// ==========================================================================
//	eim-stretched-panel
//
//    PrimeNGのパネル表示用スタイル
//
//    <p-panel class="eim-stretched-panel" header="{{ 'EIM_XXXX.LABEL_02000' | translate }}">
//
//		パネルのコンテントの余白をなくす場合、eim-panel-content-fitを指定する
//    <p-panel class="eim-stretched-panel eim-panel-content-fit" header="{{ 'EIM_XXXX.LABEL_02000' | translate }}">
//
//		サブメニューは右端に寄せて表示する設定となっています。
//
// ==========================================================================
::ng-deep p-panel.eim-stretched-panel {
	height: 100%;

	.p-panel.p-component {

		.p-panel-header {
			.eim-menubar {
				position:relative;	
			}

			.eim-menubar .p-menubar-submenu {
				right: 0;
				left: auto !important;
			}
		}
		.p-panel-content {
			height: 100%;
		}
	}
}

