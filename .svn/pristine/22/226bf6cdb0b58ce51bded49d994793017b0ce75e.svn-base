<div class="p-grid" style="width: 100%; height: 100%; margin-bottom: 5px;">
	<form class="eim-security" autocomplete="off">
		<!-- セキュリティ -->
		<p-panel class="eim-panel-containing-grid" header="{{ 'EIM_OBJECT_EDITORS.LABEL_02034' | translate }}">
			<eim-tree #securityTree enableOpenOnSelect="true" (selected)="onSelectSecurity($event)" [componentService]="treeComponentService"></eim-tree>
		</p-panel>
	</form>
	<div class="eim-access-entry">
		<!-- アクセスエントリー -->
		<p-panel #entryPnl class="eim-panel-containing-grid" header="{{ 'EIM_OBJECT_EDITORS.LABEL_02035' | translate }}">
			<div style="width: 100%; height: 100%; margin-bottom: 5px;">
				<eim-data-grid #accessEntryGrid [equals]="equalsAccessEntry" (selected)="onSelectAccessEntry($event)"
					style="height: 100%;" [multiple]="false"></eim-data-grid>
			</div>
		</p-panel>
	</div>

	<!-- アクセス権限 -->
	<div class="eim-access-role">
		<p-panel #authPnl class="eim-panel-containing-grid" header="{{ 'EIM_OBJECT_EDITORS.LABEL_02036' | translate }}">
			<div style="width: 100%; height: calc(100% - 20px); overflow: auto;">
				<table>
					<thead>
						<tr>
							<td *ngIf="overwriteFlag" style="width: 15%;">{{ 'EIM_ADMINS.LABEL_02035' | translate }}</td><!-- 上書 -->
							<td>{{ 'EIM_OBJECT_EDITORS.LABEL_02037' | translate }}</td><!-- 許可 -->
							<td>{{ 'EIM_OBJECT_EDITORS.LABEL_02038' | translate }}</td><!-- 拒否 -->
							<td>{{ 'EIM_OBJECT_EDITORS.LABEL_02039' | translate }}</td><!-- 無視 -->
							<td></td>
						</tr>
					</thead>
					<tbody>
						<tr *ngFor="let accessRole of accessRoleList">
							<td *ngIf="overwriteFlag" align="center">
								<eim-checkbox binary="true" disabled="true" [(ngModel)]="accessRole.overwrite" [style]="{'width': '16px', 'margin': '0 auto'}"></eim-checkbox>
							</td>
							<td>
								<eim-radio-button class="eim-form-item" disabled="true" name="{{accessRole.roleId}}" value="1" [(ngModel)]="accessRole.permit" [style]="{'width': '16px', 'margin': '0 auto'}"></eim-radio-button>
							</td>
							<td>
								<eim-radio-button class="eim-form-item" disabled="true" name="{{accessRole.roleId}}" value="0" [(ngModel)]="accessRole.permit" [style]="{'width': '16px', 'margin': '0 auto'}"></eim-radio-button>
							</td>
							<td>
								<eim-radio-button class="eim-form-item" disabled="true" name="{{accessRole.roleId}}" value="2" [(ngModel)]="accessRole.permit" [style]="{'width': '16px', 'margin': '0 auto'}"></eim-radio-button>
							</td>
							<td>
								{{accessRole.dispName}}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</p-panel>
	</div>
</div>

