<div class="eim-ui-widget" style="height: 100%;">
	<div id="cy" #cy></div>
	<label class="eim-diagram-title">{{info.diagramName}}</label>
	<div style="position: relative;">
		<div *ngIf="editable" class="eim-diagram-action-center">
				<button pButton type="button" class="p-button-success icon-only-button" icon="fa fa-window-maximize"
						[disabled]="!workflow || addingEvent"
						(click)="onClickAddStatusType($event)"
						pTooltip="{{ 'EIM_ADMINS.LABEL_03029' | translate }}"></button>
				<div style="margin-left: 4px;" pTooltip="{{ 'EIM_ADMINS.LABEL_03030' | translate }}">
					<p-toggleButton class="p-button-success icon-only-button"
						onLabel="" offLabel=""
						onIcon="fa fa-arrow-up" offIcon="fa fa-arrow-up"
						[disabled]="!workflow"
						[(ngModel)]="addingEvent"
						(onChange)="onClickAddEvent($event)"></p-toggleButton>
				</div>
				<div style="width: 30px;"></div>
				<button pButton type="button" class="p-button-success icon-only-button" icon="fa fa-caret-left"
						[disabled]="addingEvent || !isSelectStatusType || isSelectedFirstStatusType"
						(click)="onClickMoveLeft($event)"
						pTooltip="{{ 'EIM_ADMINS.LABEL_03031' | translate }}"></button>
				<button pButton type="button" class="p-button-success icon-only-button" icon="fa fa-caret-right"
						style="margin-left: 4px;"
						[disabled]="addingEvent || !isSelectStatusType || isSelectedLastStatusType"
						(click)="onClickMoveRight($event)"
						pTooltip="{{ 'EIM_ADMINS.LABEL_03032' | translate }}"></button>
				<button pButton type="button" class="p-button-success icon-only-button" icon="eim-icon-trash"
						style="margin-left: 4px;"
						[disabled]="addingEvent || (!isSelectStatusType && !isSelectEventType)"
						(click)="onClickDelete($event)"
						pTooltip="{{ 'EIM.LABEL_03003' | translate }}"></button>
			</div>
		</div>
	<div class="eim-diagram-action">
		<button pButton type="button" class="p-button-success icon-only-button" icon="fa fa-arrows" (click)="onClickFit()" pTooltip="{{ 'EIM.LABEL_03012' | translate }}"></button>
		<button pButton type="button" class="p-button-success icon-only-button" icon="fa fa-search-plus" (click)="onClickZoom(0.5)" pTooltip="{{ 'EIM.LABEL_03013' | translate }}"></button>
		<button pButton type="button" class="p-button-success icon-only-button" icon="fa fa-search-minus" (click)="onClickZoom(-0.4)" pTooltip="{{ 'EIM.LABEL_03014' | translate }}"></button>
	</div>
</div>

<p-contextMenu *ngIf="showContextMenu" [target]="cy" [model]="contextMenuItems" appendTo="body"></p-contextMenu>
