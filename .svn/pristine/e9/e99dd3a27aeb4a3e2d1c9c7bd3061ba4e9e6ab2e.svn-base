.viewer-container {
    display: grid;
    grid-template-rows: 1fr auto auto;
    height: 100%;
}

.container {
	display: flex;
	flex-direction: column;

	height: 100%;
	overflow-y: auto;
	padding: 10px;
}

.thumbnails-image-div {
	display: flex;
	flex-wrap: wrap;
}

.paginator-bar{
	width: 100%;
	height: Auto;
	min-height: 30px;
	background-color: #ffffff;
}

.status-bar{
	bottom: 0;
	width: 100%;
	height: 30px;
	display: flex;
	background-color: #ffffff;
}