@use '_variables' as *;
@use 'tasks-theme' as *;

.toggle-wrapper {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100%;
}
.toggle-container {
	display: flex;
	align-items: center;
}
.toggle-container:focus-visible {
	outline: none;
	box-shadow: $eim-focused-box-shadow;
}
.toggle-container.editable {
	cursor: pointer;
}
.toggle {
	width: 50px;
	height: 25px;
	background-color: #ccc;
	border-radius: 25px;
	position: relative;
	transition: background-color 0.3s;
}
.toggle.active {
	background-color: #4CAF50;
}
.toggle .circle {
	width: 21px;
	height: 21px;
	background-color: white;
	border-radius: 50%;
	position: absolute;
	top: 2px;
	left: 2px;
	transition: transform 0.3s;
}
.toggle.active .circle {
	transform: translateX(25px);
}
