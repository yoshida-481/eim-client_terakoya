<div *ngIf="initialized" class="eim-circulation-situation" style="margin-left:5px; margin-top:5px; margin-right:5px; height:100%;">
	<form autocomplete="off" novalidate style="height:100%;">
		<div style="height:calc(100% - 40px); overflow:auto;">
			<label class="eim-form-label eim-form-label-required">{{'EIM_DOCUMENTS.LABEL_02139' | translate}}</label>
			<eim-user-input-form-item #targetUser name="targetUser" [required]="true" [(ngModel)]="users" [multiple]="true"></eim-user-input-form-item>
			<div style="height: auto; margin-bottom:15px">
				<eim-tree #tree style="line-height:19px;" [componentService]="treeComponentService" (selected)="onSelectTreeNode($event)"></eim-tree>
			</div>
			<div class="eim-circulation-situation-search-detail-panel-outer">
				<div style="width:95%;">
					<label class="eim-form-label">{{'EIM.LABEL_02002' | translate}}</label>
					<div class="eim-form-item" style="margin-bottom:15px;">
						<div class="eim-form-input" style="display: flex; width: 100%">
							<input name="keyword" pInputText type="text" [(ngModel)]="objName" style="width: 100%;" />
						</div>
					</div>
					<label class="eim-form-label">{{'EIM_DOCUMENTS.LABEL_02177' | translate}}</label>
					<div class="eim-form-item" style="margin-bottom:15px;">
						<div class="eim-form-input" style="width: 100%;">
							<eim-radio-button name="searchTypeAll" label="{{'EIM_DOCUMENTS.LABEL_02178' | translate}}" value="false" [(ngModel)]="pathCondition" (click)="onClickSearchType(false)"></eim-radio-button>
							<eim-radio-button name="searchTypeBelowNextFolder" label="{{'EIM_DOCUMENTS.LABEL_02128' | translate}}" value="true" [(ngModel)]="pathCondition" (click)="onClickSearchType(true)"></eim-radio-button>
							<div style="display: flex">
								<input name="searchType" pInputText [ngClass]="pathCondition == 'true' ? 'search-path-target-folder': '' " type="text" [(ngModel)]="searchPath" [disabled]='true' style="width: 100%;" />
								<button pButton type="button" severity="info" class="icon-only-button eim-form-input-multi-button" icon="fa fa-external-link"  [disabled]="folderSelectButtonDisabled" (click)="onClickFolderSelect($event)" pTooltip="{{ 'EIM.LABEL_03006' | translate }}"></button>
							</div>
						</div>
					</div>
					<label *ngIf="isApprovalRequest" class="eim-form-label">{{'EIM_DOCUMENTS.LABEL_02179' | translate}}</label>
					<label *ngIf="!isApprovalRequest" class="eim-form-label">{{'EIM_DOCUMENTS.LABEL_02123' | translate}}</label>
					<div class="eim-form-item" style="margin-bottom:15px;">
						<div class="eim-form-input" style="display: flex; width: 100%" >
							<div style="margin-right: 16px;">
								<p-datepicker #fromCalendar name="dateFrom" [showIcon]="true" appendTo="body" [(ngModel)]="searchRangeStartDate" [selectOtherMonths]="true" [inputStyle]="{'width':'80%'}" dateFormat="{{dateFormat}}" [showButtonBar]="true" [monthNavigator]="true" [yearNavigator]="true" [yearRange]="CALENDAR_YEAR_RANGE"  [showOnFocus]=false (onTodayClick)="onClickToday($event, fromCalendar)" (onClearClick)="onClickClear($event, fromCalendar)"></p-datepicker>
							</div>
							<div class="center" style="margin-right: 10px; align-items: center; text-align:center; display:flex; height:100%;"><label class="eim-form-label">{{DELIMITER_TIDE}}</label></div>
							<div>
								<p-datepicker #toCalendar name="dateTo" [showIcon]="true" appendTo="body" [(ngModel)]="searchRangeEndDate" [selectOtherMonths]="true" [inputStyle]="{'width':'80%'}" dateFormat="{{dateFormat}}" [showButtonBar]="true" [monthNavigator]="true" [yearNavigator]="true" [yearRange]="CALENDAR_YEAR_RANGE"  [showOnFocus]=false (onTodayClick)="onClickToday($event, toCalendar)" (onClearClick)="onClickClear($event, toCalendar)"></p-datepicker>
							</div>
						</div>
					</div>
					<eim-checkbox name="withOldRevision" class="eim-form-item" label="{{'EIM_DOCUMENTS.LABEL_02180' | translate}}" binary="true" [(ngModel)]="isContainOldVersion"></eim-checkbox>
				</div>
			</div>
		</div>
		<div style="display:flex; margin-top:5px;">
			<button pButton type="button" label="{{ 'EIM_DOCUMENTS.LABEL_03018' | translate }}" icon="fa fa-download" [disabled]="disabledCsvDownloadFlg" (click)="onClickCsvDownload()" class="eim-contents-search-btn p-button-primary" style="margin-right:5px; white-space:nowrap;"></button>
			<button pButton type="submit" label="{{ 'EIM.LABEL_03007' | translate }}" icon="eim-icon-search" (click)="onSearch($event)" class="eim-contents-search-btn p-button-primary" style="letter-spacing: 5px; margin-right:5px; white-space:nowrap;"></button>
			<button pButton type="button" class="p-button-secondary" label="{{ 'EIM.LABEL_03009' | translate }}" (click)="onClear($event);" style=" white-space:nowrap;"></button>
		</div>
	</form>
</div>
