<form #objectUpdator="ngForm" class="eim-form-wide" style="height: 100%;" autocomplete="off" novalidate>
	<as-split direction="vertical">
		<as-split-area [size]="splitAreaFirstSize" style="overflow-y: hidden;">
			<div *ngIf="object" style="overflow-y: auto; height: calc(100% - 5px);" class="eim-narrow-margin-bottom eim-narrow-margin-right">
				<!-- ID -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM.LABEL_02027' | translate }}</label>
					<div class="eim-form-input">
						<input name="id" type="text" pInputText [ngModel]="object.id" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- タイプ -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM.LABEL_02019' | translate }}</label>
					<div class="eim-form-input">
						<input name="typeName" type="text" pInputText [ngModel]="object.type.name" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- 名前 -->
				<div class="eim-form-item">
					<label class="eim-form-label eim-form-label-required">{{ 'EIM.LABEL_02002' | translate }}</label>
					<div class="eim-form-input">
						<input name="name" type="text" required="true" maxlength="{{inputMaxLength}}" pInputText [(ngModel)]="object.name" style="width: 100%;"/>
					</div>
				</div>
				<!-- リビジョン -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02064' | translate }}</label>
					<div class="eim-form-input">
						<input name="revision" type="text" pInputText [ngModel]="object.revision" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- 作成者 -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02066' | translate }}</label>
					<div class="eim-form-input">
						<input name="creationUser" type="text" pInputText [ngModel]="object.creationUser.name" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- 作成日時 -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02067' | translate }}</label>
					<div class="eim-form-input">
						<input name="creationDate" type="text" pInputText [ngModel]="object.creationDate" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- 更新者 -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02068' | translate }}</label>
					<div class="eim-form-input">
						<input name="modificationUser" type="text" pInputText [ngModel]="object.modificationUser.name" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- 更新日時 -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02069' | translate }}</label>
					<div class="eim-form-input">
						<input name="modificationDate" type="text" pInputText [ngModel]="object.modificationDate" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- ロックユーザ -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02018' | translate }}</label>
					<div class="eim-form-input">
						<input name="lockUser" type="text" pInputText [ngModel]="object.lockUser.name" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- ロック日時 -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02020' | translate }}</label>
					<div class="eim-form-input">
						<input name="lockDate" type="text" pInputText [ngModel]="object.lockDate" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- ステータス -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM_OBJECT_EDITORS.LABEL_02065' | translate }}</label>
					<div class="eim-form-input">
						<input name="statusTypeName" type="text" pInputText [ngModel]="object.statusTypeName" [disabled]="true" style="width: 100%;"/>
					</div>
				</div>
				<!-- セキュリティ -->
				<div class="eim-form-item">
					<label class="eim-form-label">{{ 'EIM.LABEL_03050' | translate }}</label>
					<div class="eim-form-input" style="display: flex;" >
						<div class="eim-form-input-default eim-form-input-for-search-and-clear" style="width: 100%;">
							<div class="eim-form-input-text-for-search-and-clear">
								{{object.security.name}}　<!-- 空白を入れないと削除時に1pxずれる -->
							</div>
							<div *ngIf="object.security.name" align="right">
								<i class="fa fa-times" style="padding-right:5px;"  (click)="onClickSecurityDelete()"></i>
							</div>
						</div>
						<button pButton type="button" icon="fa fa-fw fa fa-external-link" style="height: 26px; width: 26px; margin-left: 5px;" severity="info" class="icon-only-button" style="margin-left: 5px; float: right;" pTooltip="{{ 'EIM_OBJECT_EDITORS.LABEL_02075' | translate }}"
							(click)="onClickSecuritySelect();" [disabled]="false"></button>
					</div>
				</div>
			</div>
		</as-split-area>
		<!-- 属性 -->
		<as-split-area [size]="10 - splitAreaFirstSize" style="overflow-y: hidden;">
			<div style="overflow-y: auto; height: calc(100% - 5px);" class="eim-narrow-margin-top eim-narrow-margin-right">
				<eim-attribute-list *ngIf="object"
					[form]="objectUpdator.form"
					[(attributes)]="object.attributeList">
				</eim-attribute-list>
			</div>
		</as-split-area>
	</as-split>
</form>
