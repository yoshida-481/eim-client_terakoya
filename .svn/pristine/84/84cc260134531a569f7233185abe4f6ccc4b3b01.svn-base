::ng-deep .eim-attachement-file-input-form-item p-listbox .p-listbox {
	padding: 0px;
	border-radius: 0px;
}

::ng-deep .eim-attachement-file-input-form-item .p-listbox .p-listbox-list-container {
	border-radius: 0px;
}

::ng-deep .eim-attachement-file-input-form-item .p-listbox .p-listbox-list {
	padding:0px;
	gap:0px;
}

::ng-deep .eim-attachement-file-input-form-item .p-listbox .p-listbox-list .p-listbox-option {
	padding: 0.25rem;
	user-select: text; /* 2024.10 文字列選択ができるように追加 */
	border-radius: 0px;
}


::ng-deep .eim-attachement-file-input-form-item .p-listbox .p-listbox-list .p-listbox-option:focus {
	box-shadow: none;
}

::ng-deep .eim-attachement-file-input-form-item .p-listbox .p-listbox-list .p-listbox-option.p-listbox-option-selected {
	color: #555555;
	background: #c4eefc;
}

::ng-deep .eim-attachement-file-input-form-item .p-listbox:not(.p-disabled) .p-listbox-option.p-listbox-option-selected.p-focus {
	color: #555555;
	background: #c4eefc;
}

::ng-deep .eim-attachement-file-input-form-item .p-listbox:not(.p-disabled) .p-listbox-option:not(.p-listbox-option-selected):not(.p-disabled):hover {
	color: #333;
	background : #eaeaea;
}

.eim-form-input-multi-button-area-container {
	display: block;
	width: 58px;
	margin-left: 1px;
}

.eim-form-input-multi-button-area-container .eim-form-input-multi-button {
	margin-left: 3px;
}

.eim-form-input-multi-button-area-container .eim-upload-btn {
  padding: 0px;
	margin-right: 1.2px;
}

.eim-form-input-multi-button-area-container .eim-upload-btn-icon {
	margin-left: 4px;
	margin-top: 1px;
}
