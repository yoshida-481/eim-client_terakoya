.eim-security {
	height: 100%;
	width: 280px;
	padding-right: 6px;
}

::ng-deep .eim-security .ui-panel-content-wrapper {
	height: calc(100% - 39px);
}

::ng-deep .eim-security .p-panel-content {
	height: 100%;
}
.eim-access-entry {
	height: 100%;
	width: calc(100% - 580px);
	padding-left: 6px;
	padding-right: 6px;
}

::ng-deep .eim-access-entry .p-panel-content {
	height: 100%;
}

.eim-access-role {
	height: 100%;
	width: 300px;
	padding-left: 6px;
}

::ng-deep .eim-access-role .p-panel-content {
	height: 100%;
}

/** アクセス権限のラジオボタン */
::ng-deep .eim-access-role .p-radiobutton-box {
	opacity: 1;
	background-color: #FFFFFF;
}
::ng-deep .eim-access-role div.p-radiobutton.p-disabled .p-radiobutton-box {
	opacity: 1;
	background-color: #eeeeee;
}
::ng-deep .eim-access-role .p-radiobutton-icon {
	font-size: 7px;
}

tbody > tr > td {
	white-space: nowrap;
}