<div style="height: 100%;">
	<form #attritemSelectorForm="ngForm" class="p-grid" style="width: 100%; height: 100%;" autocomplete="off">
		<div style="width: 100%; height: 100%; padding-top: 0px; padding-left: 0px; padding-bottom: 0px;" eim-vertical-container>
			<div style="margin-bottom: 10px;">
				<div *ngFor="let lang of languages;" class="eim-form-item">
					<label class="eim-form-label eim-form-label-required" style="width: 40%;">{{ 'EIM_ADMINS.LABEL_02003' | translate:lang }}</label>
					<div class="eim-form-input">
						<input name="name_{{lang.lang}}" type="text" pInputText [(ngModel)]="nameList[lang.lang]" maxlength="{{inputMaxLength}}" style="width: 95%;"/>
					</div>
				</div>
					<div class="eim-form-item">
						<label class="eim-form-label eim-form-label-required" style="width: 50%;">分類対象</label>
						<div class="eim-form-input">
							<eim-radio-button name="revup" label="フォルダ" value="All" [(ngModel)]="revup"></eim-radio-button>
							<eim-radio-button name="revup" label="ドキュメント" value="Latest" [(ngModel)]="revup"></eim-radio-button>
						</div>
					</div>
					<div class="eim-form-item">
						<label class="eim-form-label eim-form-label-required" style="width: 50%;">属性値なし表示</label>
						<div class="eim-form-input">
							<eim-radio-button name="mutual" label="表示する" value="NoPermit" [(ngModel)]="mutual"></eim-radio-button>
							<eim-radio-button name="mutual" label="表示しない" value="Permit" [(ngModel)]="mutual"></eim-radio-button>
						</div>
					</div>
			</div>
		</div>
	</form>
</div>
